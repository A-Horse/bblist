{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "prettier",
    "jest",
    "flowtype"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    // "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
    // "plugin:flowtype/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "no-console": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 1,
    "react/jsx-no-undef": ["error"],
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-undef": ["error"],
    "no-unused-vars": ["warn"],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "printWidth": 100
    }]
  }
}
